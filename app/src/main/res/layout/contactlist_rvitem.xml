<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mwhite"
    >

    <RelativeLayout
        android:id="@+id/contactlist_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5">

        <ImageView
            android:id="@+id/contactimage"
            android:layout_width="@dimen/margin35"
            android:layout_height="@dimen/margin35"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin15"
            android:layout_toEndOf="@id/contactimage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contactname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_font_bold"
                android:text="@string/contact_name"
                android:textColor="@color/mgray"
                android:textSize="@dimen/testSize16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin5"
                android:fontFamily="@font/app_font_bold"
                android:hint="@string/contact_number"
                android:textColor="@color/mblack"
                android:textColorHint="@color/mblack"
                android:textSize="@dimen/testSize14"
                android:textStyle="bold" />


        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/margin50"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/colorGrey"/>

</LinearLayout>