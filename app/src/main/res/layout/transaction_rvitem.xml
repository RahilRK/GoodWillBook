<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin30"
        app:cardCornerRadius="@dimen/margin5"
        android:background="@color/mwhite"
        android:layout_marginStart="@dimen/margin5"
        android:layout_marginEnd="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:padding="@dimen/margin10"
                >

                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:textColor="@color/mgray"
                    android:gravity="start|center"
                    android:textSize="@dimen/testSize14"
                    android:text="@string/tempdatetime"/>

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mblack"
                    android:textSize="@dimen/testSize18"
                    android:gravity="start|center"
                    android:fontFamily="@font/app_font_bold"
                    android:paddingTop="@dimen/margin10"
                    android:paddingBottom="@dimen/margin10"
                    android:text="@string/_100"/>

                <ImageView
                    android:id="@+id/ivapproved"
                    android:layout_width="@dimen/margin30"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_approved"
                    android:paddingTop="@dimen/margin5"
                    android:paddingBottom="@dimen/margin5"
                    />

            </LinearLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>