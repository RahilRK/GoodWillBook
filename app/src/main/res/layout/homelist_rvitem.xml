<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mwhite"
    >

        <RelativeLayout
            android:id="@+id/detail_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5">

            <ImageView
                android:id="@+id/contactimage"
                android:layout_width="@dimen/margin45"
                android:layout_height="@dimen/margin45"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"
                android:layout_marginStart="@dimen/margin15"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin15"
                android:layout_toEndOf="@id/contactimage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contactname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_name"
                    android:textColor="@color/mblack"
                    android:textSize="@dimen/testSize16"
                    android:padding="@dimen/margin5"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="@dimen/margin5"
                    >

                    <TextView
                        android:id="@+id/tvgivereceive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mgray"
                        android:textStyle="bold"
                        android:textSize="@dimen/testSize16"
                        android:text="@string/will_receive"/>

                    <TextView
                        android:id="@+id/tvgivereceiveamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin10"
                        android:fontFamily="@font/app_font_bold"
                        android:text="@string/_100"
                        android:textColor="@color/mgreen"
                        android:textSize="@dimen/testSize18" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/margin50"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/colorGrey"/>

</LinearLayout>