<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mwhite">

    <LinearLayout
        android:id="@+id/flashlightlo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/white_circle"
        android:layout_margin="@dimen/margin15"
        android:visibility="gone">

        <ToggleButton
            android:id="@+id/togglebt"
            android:layout_width="@dimen/margin35"
            android:layout_height="@dimen/margin35"
            android:checked="false"
            android:drawableTop="@drawable/togglebtselector"
            android:background="@null"
            android:textOff=""
            android:textOn=""
            android:paddingTop="@dimen/margin5"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivclose"
        android:layout_width="@dimen/margin35"
        android:layout_height="@dimen/margin35"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin15"
        app:srcCompat="@drawable/ic_close"/>

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        />

    <com.hksofttronix.goodwillbook.Util.ScanningIndicator
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mblack"
        android:layout_marginTop="@dimen/margin15"
        android:layout_marginStart="@dimen/margin15"
        android:layout_marginEnd="@dimen/margin15"
        android:text="@string/scanqrcodehint"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/testSize16"
        android:textAlignment="center"
        android:layout_below="@id/surfaceView"/>

    <LinearLayout
        android:id="@+id/lo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/mwhite">

    </LinearLayout>
</RelativeLayout>